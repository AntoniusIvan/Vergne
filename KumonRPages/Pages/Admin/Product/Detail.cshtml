@model KumonRPages.Pages.Admin.Product.DetailModel

<br />
<h2 class="text-info">Details New Products</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Item.ItemID" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Code"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Code" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Item.Code" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Barcode"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Barcode" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Item.Barcode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Name" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Item.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Unit1"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Unit1" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Item.Unit1" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.GRIR"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.GRIR" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Item.GRIR" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.IsActiveInput"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.IsActiveInput" readonly="readonly"  class="" type="checkbox" />
            </div>
            <span asp-validation-for="Item.IsActiveInput" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.UnitPrice1"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.UnitPrice1" readonly="readonly"  class="form-control" asp-is-invariant="true" />
            </div>
            <span asp-validation-for="Item.UnitPrice1" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="image"></label>
            </div>
            <div class="col-6">
                @*<input asp-for="Item.Image" class="form-control" type="file" />*@
                <input asp-for="image" readonly="readonly"  type="file" />
            </div>
            <span asp-validation-for="image" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.CategoryID"></label>
            </div>
            <div class="col-6">
                @*<input asp-for="item.CategoryID" class="form-control" />*@
                <select asp-for="Item.CategoryID" readonly="readonly"  asp-items="ViewBag.CategoryID" class="form-control"></select>
            </div>
            <span asp-validation-for="Item.CategoryID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.BrandID"></label>
            </div>
            <div class="col-6">
                @*<input asp-for="item.BrandID" class="form-control" />*@
                <select asp-for="Item.BrandID" readonly="readonly"  asp-items="ViewBag.BrandID" class="form-control"></select>
            </div>
            <span asp-validation-for="Item.BrandID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Notes"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Notes" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Item.Notes" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.ModifiedDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.ModifiedDate" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Item.ModifiedDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Length"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Length" readonly="readonly"  class="form-control" />
            </div>
            <span asp-validation-for="Item.Length" class="text-danger"></span>
        </div>@**@
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Edit" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.Item.Image" width="100%" height="250px" style="border-radius: 5px;border: 1px solid #efefef" />
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}