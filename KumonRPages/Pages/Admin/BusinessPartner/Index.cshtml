@page
@model KumonRPages.Pages.Admin.BusinessPartner.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">BusinessPartner List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New BusinessPartner</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.BusinessPartners.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="BusinessPartners.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                            <label asp-for="BusinessPartners.FirstOrDefault().Code"></label>
                        </th>
                        <th>
                            <label asp-for="BusinessPartners.FirstOrDefault().BusinessPartnerID"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.BusinessPartners)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.BusinessPartnerID)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.BusinessPartnerID" onclick="return confirm('Are you sure want to delete')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.BusinessPartnerID" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Books Available</p>
            }
        </form>
    </div>


    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>BusinessPartnerID</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>"

@section Scripts{ 
    <script src="~/js/BusinessPartner.js"></script>
}