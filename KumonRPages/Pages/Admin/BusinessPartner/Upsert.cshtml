@page
@model KumonRPages.Pages.Admin.BusinessPartner.UpsertModel
@{
}


<br />
<h2 class="text-info">@(String.IsNullOrEmpty(Model.BusinessPartner.BusinessPartnerID)? "Create": "Edit" ) BusinessPartner</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (!(String.IsNullOrEmpty(Model.BusinessPartner.BusinessPartnerID)))
        {

            <input type="hidden" asp-for="BusinessPartner.BusinessPartnerID" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="BusinessPartner.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="BusinessPartner.Name" class="form-control" />
            </div>
            <span asp-validation-for="BusinessPartner.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="BusinessPartner.Code"></label>
            </div>
            <div class="col-6">
                <input asp-for="BusinessPartner.Code" class="form-control" />
            </div>
            <span asp-validation-for="BusinessPartner.Code" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="BusinessPartner.BusinessPartnerID"></label>
            </div>
            <div class="col-6">
                <input asp-for="BusinessPartner.BusinessPartnerID" class="form-control" />
            </div>
            <span asp-validation-for="BusinessPartner.BusinessPartnerID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <button type="submit" class="btn btn-primary form-control>@(String.IsNullOrEmpty(Model.BusinessPartner.BusinessPartnerID)? "Create": "Update" )</button>
            </div>
            <div class="col-3">
                @*<a asp-page="Index" class="btn btn-success form-control">Back to List</a>*@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}